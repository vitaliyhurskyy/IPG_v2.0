@model IEnumerable<IPG_v2._0.Models.Categorias>

@{
    ViewData["Title"] = "Index";
}

<h1>Category</h1>

<p>
    <a asp-action="Create">Create New Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => categoria.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@categoria.CategoriaId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@categoria.CategoriaId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@categoria.CategoriaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>