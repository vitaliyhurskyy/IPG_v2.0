@model IEnumerable<Projetos>

@{
    ViewData["Title"] = "Projetos";
}

<h1>Portfolio</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Project</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var projetos in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => projetos.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => projetos.Descricao)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@projetos.ProjetoId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@projetos.ProjetoId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@projetos.ProjetoId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

